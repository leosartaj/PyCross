import optparse

# for gui
from PyCross.gui.pycrossGUIClass import pycrossGUIClass
import gtk

try:
    from PyCross import __desc__ # try to get version number
except ImportError:
    __desc__ = 'UNKNOWN'

def parse_args():
    usage = """usage: %prog [options]

    To play, simply run
    pycross

    Run 
    pycross -h/--help
    For help
"""
    parser = optparse.OptionParser(usage, version=__desc__)

    options, args = parser.parse_args()

    if len(args):
        parser.error('expecting no arguments')

    return options

if __name__ == '__main__':
    options = parse_args()

    app = pycrossGUIClass()
    gtk.main()
